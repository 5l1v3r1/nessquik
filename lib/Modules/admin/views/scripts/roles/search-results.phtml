<?php if (empty($this->results)): ?>
	<div class='prepend-top no-results-mesg'>
		No roles were found
	</div>
<?php else: ?>
<div class='selectable last scanner-list list'>
	<table>
		<thead>
			<tr>
				<th class='check'><input type='checkbox'></th>
				<th>Role name</th>
				<th colspan='2'>Description</th>
			</tr>
		</thead>
		<tbody>
<?php foreach ($this->results as $role): ?>
	<tr class='row'>
		<td class='check'>
			<?php if ($role['immutable'] == 0): ?>
			<input type='checkbox' name='roleId' value='<?php echo $role['id']; ?>'>
			<?php else: ?>
			&nbsp;
			<?php endif; ?>
		</td>
		<td class='role-name'>
			<a class='hypertext' href='<?php echo $this->baseUrl() ;?>/roles/modify/edit?id=<?php echo $role['id']; ?>'><?php echo $role['name'] ; ?></a>&nbsp;
		</td>
		<td class='scanner-description'><?php echo $role['description']; ?></td>
		<td class='icons'>
			<?php if ($role['immutable'] == 0): ?>
				<img class='trash' src='<?php echo $this->baseUrl(); ?>/usr/images/trash.gif' alt='Delete role'>
			<?php else: ?>
				&nbsp;
			<?php endif; ?>
		</td>
	</tr>
<?php endforeach; ?>
		</tbody>
	</table>
</div>
<?php endif; ?>
